version: '3.6'
services:
  app:
    image: flaskbp_app:latest
    hostname: app
    build:
      context: ./containers/app
      dockerfile: Dockerfile
    command: python3 /opt/app/run_dev.py
    networks:
      - frontend
      - backend
    volumes:
      - .:/opt/app
    ports:
      - 5000:5000
    depends_on:
      - db
    healthcheck:
      test: ['CMD', 'curl', '--fail', 'http://localhost:5000/']
      interval: 30s
      timeout: 5s
      retries: 3
      start_period: 30s
  db:
    image: flaskbp_db:latest
    hostname: db
    build:
      context: ./containers/db
      dockerfile: Dockerfile
    ports:
      - 3306
    environment:
      - MYSQL_ROOT_PASSWORD=M4K317C0MPL3X
      - MYSQL_USER=test
      - MYSQL_PASSWORD=test
      - MYSQL_DATABASE=test
    networks:
      - backend
    volumes:
      - ./data:/var/lib/mysql
    healthcheck:
      test: ['CMD', 'nc', '-vz', 'localhost', '3306']
      interval: 30s
      timeout: 5s
      retries: 3
      start_period: 30s

networks:
  frontend:
  backend:
